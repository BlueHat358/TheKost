<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Content.ListrikTagihanFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:paddingTop="15dp"
            android:paddingLeft="30dp"
            android:paddingBottom="15dp"
            android:id="@+id/action_bar_activity"
            >
            <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@drawable/ic_back_arrow_black"
                android:id="@+id/content_back_tagihan"
                android:layout_marginRight="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title_content_fragment"
                android:text="Listrik PLN"
                android:layout_gravity="center_vertical"
                android:textSize="25sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/color_btn_login"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:alpha="0.8"
            >
            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@mipmap/ic_launcher"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cek tagihan / maximum KWH meter sebelum melakukan pembayaran"
                android:textColor="@color/color_white"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Token Listrik"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:id="@+id/btn_token_listrik"
                    android:background="@android:color/transparent"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/color_fragment_active"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Tagihan Listrik"
                    android:textSize="20sp"
                    android:background="@android:color/transparent"
                    android:textAllCaps="false"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/color_fragment_active_line"
                    android:layout_gravity="center"
                    android:id="@+id/view_tagihan_listrik"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/btntgl_style"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="085713355805"
                android:id="@+id/tv_id_pelanggan_listrik"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="485dp"
            android:alpha="0.5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/color_white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/color_black"
                    android:layout_marginBottom="5dp"
                    android:text="Tagihan Listrik Anda" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:padding="30dp">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <TableRow
                        >
                        <TextView
                            android:text="ID Pelanggan"
                            android:layout_marginRight="30dp"
                            android:textColor="@color/color_black"
                            />
                        <TextView
                            android:text=":"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/color_black"
                            />
                        <TextView
                            android:text="587273028500"
                            android:id="@+id/tv_id_pelanggan_listrik_tagihan"
                            android:textColor="@color/color_black"
                            />
                    </TableRow>
                    <TableRow
                        >
                        <TextView
                            android:text="Nama"
                            android:textColor="@color/color_black"
                            />
                        <TextView
                            android:text=":"
                            android:textColor="@color/color_black"
                            />
                        <TextView
                            android:text="Budi Utomo"
                            android:id="@+id/tv_nama_tagihan_listrik"
                            android:textColor="@color/color_black"
                            />
                    </TableRow>
                    <TableRow
                        >
                        <TextView
                            android:text="Tarif / Daya"
                            android:textColor="@color/color_black"
                            />
                        <TextView
                            android:text=":"
                            android:textColor="@color/color_black"
                            />
                        <TextView
                            android:text="R1M / 900"
                            android:id="@+id/tv_id_tarifdaya_tagihan"
                            android:textColor="@color/color_black"
                            />
                    </TableRow>
                    <TableRow
                        >
                        <TextView
                            android:text="Bulan / Tahun"
                            android:textColor="@color/color_black"
                            />
                        <TextView
                            android:text=":"
                            android:textColor="@color/color_black"
                            />
                        <TextView
                            android:text="Desember 2019"
                            android:id="@+id/tv_bulanthn_listrik_tagihan"
                            android:textColor="@color/color_black"
                            />
                    </TableRow>
                    <TableRow
                        >
                        <TextView
                            android:text="Stand Meter"
                            android:textColor="@color/color_black"
                            />
                        <TextView
                            android:text=":"
                            android:textColor="@color/color_black"
                            />
                        <TextView
                            android:text="12576 - 15789"
                            android:id="@+id/tv_standmeter_listrik_tagihan"
                            android:textColor="@color/color_black"
                            />
                    </TableRow>
                    <TableRow
                        >
                        <TextView
                            android:text="Denda"
                            android:textColor="@color/color_black"
                            />
                        <TextView
                            android:text=":"
                            android:textColor="@color/color_black"
                            />
                        <TextView
                            android:text="Rp. 0"
                            android:id="@+id/tv_denda_listrik_tagihan"
                            android:textColor="@color/color_black"
                            />
                    </TableRow>
                    <TableRow
                        >
                        <TextView
                            android:text="Total Bayar"
                            android:textColor="@color/color_black"
                            />
                        <TextView
                            android:text=":"
                            android:textColor="@color/color_black"
                            />
                        <TextView
                            android:text="Rp. 315.583"
                            android:id="@+id/tv_total_bayar_listrik_tagihan"
                            android:textColor="@color/color_black"
                            />
                    </TableRow>
                    <TableRow
                        >
                        <TextView
                            android:text="No. Ref"
                            android:textColor="@color/color_black"
                            />
                        <TextView
                            android:text=":"
                            android:textColor="@color/color_black"
                            />
                        <TextView
                            android:text="0FIN5487525387522"
                            android:id="@+id/tb_noRef_listrik_tagihan"
                            android:textColor="@color/color_black"
                            />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bayar"
            android:layout_alignParentBottom="true"
            android:textColor="@color/color_white"
            android:background="@color/color_btn_login"
            android:id="@+id/btn_bayar_listrik"
            android:textSize="20sp"
            />
    </RelativeLayout>

</FrameLayout>